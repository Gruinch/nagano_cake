<div class="container">
  <div class="row">
    <h5>商品詳細</h5>
  </div>
  <div class="row">
    <div class="col-4">
      <%= attachment_image_tag @item,:image, :fill, 60, 60, fallback: "noimage.png"%>
    </div>
    <div class="col-8">
      <div>
        <label>商品名</label>
        <%= @item.name %>
      </div>
      <div>
        <label>商品説明</label>
        <%= @item.introduction %>
      </div>
      <div>
        <label>税込価格（税抜価格）</label>
        <%= @item.price %>
      </div>
      <div>
      <a class="btn btn-success" href="/books/<%= @item.id %>/edit">編集する</a>
      </div>
    </div>
  </div>
</div>