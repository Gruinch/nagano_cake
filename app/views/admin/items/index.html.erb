<div class="container">
  <div class="row-4">
   <h5>商品一覧</h5>
  </div>
  <div class="row-4">
    <div class="col-2"></div>
    <div class="col-8">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">商品ID</th>
            <th scope="col">商品名</th>
            <th scope="col">税抜価格</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= item.name %></td>
            <td><%= item.price %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <div class="col-2"></div>
  </div>
</div>