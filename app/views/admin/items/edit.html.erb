  <div class="container">
  <div class="row">
  <h5>商品編集</h5>
  </div>
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <%= form_with model:@item, url:admin_item_path(@item), local:true do |f| %>
      <div class="p-3">
        <label for="d-block inputImage">商品画像</label>
        <div><%= f.attachment_field :image %></div>
      </div>
      <div class="p-3 row-auto">
        <label>商品名</label>
        <div><%= f.text_field :name, class:"form-control" %></div>
      </div>
      <div class="p-3 row-auto">
         <label>商品紹介</label>
         <div rows="5"><%= f.text_area :introduction, class:"form-control" %></div>
      </div>
      <div>
        <label>税抜き価格</label>
        <%= f.text_field :price, class:"form-control", placeholder:"1000" %>
      </div>
        <div class="p-3 row-auto">
        <%= f.submit  '変更を保存',class:"btn btn-success"  %>
      </div>
      <% end %>
    </div>
  </div>
  </div>
