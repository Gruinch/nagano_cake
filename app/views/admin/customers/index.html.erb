<div class="container">
  <div class="row-4">
   <h5>会員一覧</h5>
  </div>
  <div class="row-4">
    <div class="col-2"></div>
    <div class="col-8">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">会員ID</th>
            <th scope="col">氏名</th>
            <th scope="col">メールアドレス</th>
            <th scope="col">ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td><a href="/admin/customers/<%= customer.id %>"><%= customer.last_name %><%= customer.first_name %></a></td>
            <td><%= customer.email %></td>
            <td><%= customer.is_active %></td>

          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <div class="col-2"></div>
  </div>
</div>