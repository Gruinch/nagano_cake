<div class="container">
  <div class="row">
   <h5><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h5>
  </div>
  <div class="row">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= @customer.last_name %><%= @customer.first_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @customer.postal_code%></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @customer.address%></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @customer.telephone_number%></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <td class="customer-status"><%= @customer.is_active? ? '有効' : '退会' %></td>
          </tr>
          <tr>
            <td></td>
            <td><a class="btn btn-success" href="/admin/customers/<%= @customer.id %>/edit">編集する</a></td>
            <td>
              <%= form_with model: @order, url"/admin", method: :get, local:true do |f| %>
                <%= f.hidden_field :customer_id %>
                <%= f.hidden_field :name %>
                <%= f.hidden_field :amount %>
                <%= f.hidden_field :created_at %>
              <% end %>
              <a class="btn btn-primary" href="/admin/orders">注文履歴一覧を見る</a></td>
          </tr>
        </tbody>
      </table>
  </div>
</div>