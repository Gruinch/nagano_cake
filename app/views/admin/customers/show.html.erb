<div class="container">
  <div class="contents-header-customer">
   <h5 class="header-text"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h5>
  </div>
  <div class="row">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= @customer.last_name %><%= @customer.first_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @customer.postal_code%></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @customer.address%></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @customer.telephone_number%></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <td class="customer-status"><%= @customer.is_active? ? '有効' : '退会' %></td>
          </tr>
          <tr>
            <td></td>
            <td><a class="btn btn-success" href="/admin/customers/<%= @customer.id %>/edit">編集する</a></td>
            <td>
              <%= form_with url: admin_homes_top_path,  method: :get, local:true do |f| %>
                <%= f.hidden_field :customer_id, :value => @customer.id %>
                <%= f.hidden_field :order_sort, :value => '1' %>
                <%= f.submit "注文履歴一覧を見る", class:"btn btn-primary" %>
              <% end %>
          </tr>
        </tbody>
      </table>
  </div>
</div>