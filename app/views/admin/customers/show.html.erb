<div class="container">
  <div class="row-4">
   <h5><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h5>
  </div>
  <div class="row">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= @customer.last_name %><%= @customer.first_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @customer.postal_code%></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @customer.address%></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @customer.telephone_number%></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <td><%= @customer.is_active %></td>
          </tr>
          <tr>
            <td></td>
            <td><a class="btn btn-success" href="/admin/customers/<%= @customer.id %>/edit">編集する</a></td>
            <td><a class="btn btn-success" href="/admin/orders">注文履歴一覧</a></td>
          </tr>
        </tbody>
      </table>
  </div>
</div>