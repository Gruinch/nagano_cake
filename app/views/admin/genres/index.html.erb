<div class="container">
  <div class="genre-name row">
    <h5>ジャンル一覧・追加</h5>
  </div>
  <div class="row">
    <div class="col-5">
      <%= form_with model:@genre, url:admin_genres_path, local:true do |f| %>
      <div class="genre-new">
        <label class="genre-new">ジャンル名</label>
        <div class="genre-new"><%= f.text_field :name, class:"form-control", placeholder:"ジャンル名" %></div>
      </div>
      <div class="genre-button">
      <%= f.submit  '新規登録',class:"btn btn-success"  %>
      <% end %>
      </div>
      <div class="genre-table">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">ジャンル</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><a class="btn btn-success" href="/admin/genres/<%= genre.id %>/edit">編集する</a></td>
            </tr>
            <% end %>
          </tbody>
        </table>

      </div>
    </div>
    <div class="col-2">
    </div>
    <div class="col-5"></div>
  </div>
</div>