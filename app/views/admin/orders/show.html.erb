<div class="container">
  <div class="row">
    <h5>注文履歴詳細</h5>
  </div>
    <div class="row m-3">
      <div class="col">購入者</div>
      <div class="col"><%= @customer.last_name %><%= @customer.first_name %></div>
    </div>
    <div class="row m-3">
      <div class="col">注文日</div>
      <div class="col"><%= @order.created_at %></div>
    </div>
    <div class="row m-3">
      <div class="col">配送先</div>
      <div class="col"><%= @order.postal_code %><%= @order.address %></br>
      <%= @order.name %></div>
    </div>
    <div class="row m-3">
      <div class="col">支払い方法</div>
      <div class="col"><%= @order.payment_method_i18n %></div>
    </div>

    <div class="row m-5 p-3">
      <table class="col-7 table">
        <thead>
          <tr>
            <th scope="col">商品名</th>
            <th scope="col">単価（税込）</th>
            <th scope="col">数量</th>
            <th scope="col">小計</th>
          </tr>
        </thead>
        <tbody>
        <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.item.price %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.item.price * order_detail.amount %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <div class="col-5 ">
        <div class="row">
          <div class="col">商品合計</div>
          <div class="col"><%= @order.total_payment %>円</div>
        </div>
        <div class="row">
          <div class="col">送料</div>
          <div class="col"><%= @order.shipping_fee %>円</div>
        </div>
        <div class="row">
          <div class="col">請求金額合計</div>
          <div class="col"><%= @order.total_payment+@order.shipping_fee %>円</div>
        </div>
      </div>
    </div>
</div>