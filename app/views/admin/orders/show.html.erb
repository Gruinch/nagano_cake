<div class="container">
  <div class="row">
    <h5>注文履歴詳細</h5>
  </div>
  <div class="row">
    <div class="row">
      <div class="col-3">購入者</div>
      <div class="col-3"><%= @customer.last_name %><%= @customer.first_name %></div>
    </div>
    <div class="row">
      <div class="col-3">注文日</div>
      <div class="col-3"><%= @order.created_at %></div>
    </div>
    <div class="row">
      <div class="col-3">配送先</div>
      <div class="col-3"><%= @order.postal_code %><%= @order.address %></br>
      <%= @order.name %></div>
    </div>
    <div class="row">
      <div class="col-3">支払い方法</div>
      <div class="col-3"><%= @order.payment_method %></div>
    </div>

    <div class="row">
      <table class="col-7 table">
        <thead>
          <tr>
            <th scope="col">商品名</th>
            <th scope="col">単価（税込）</th>
            <th scope="col">数量</th>
            <th scope="col">小計</th>
          </tr>
        </thead>
        <tbody>
        <% @order_details.each do |orderDetail| %>
          <tr>
            <td><%= item.name %></td>
            <td><%= order_details.price %></td>
            <td><%= order_details.amount %></td>
            <td><%= order_details.price * order_details.amount %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <div class="col-5">
        <div class="row">
          <div class="col">商品合計</div>
          <div class="col"><%= @order.total_payment %></div>
        </div>
        <div class="row">
          <div class="col">送料</div>
          <div class="col"><%= @order.shipping_fee %></div>
        </div>
        <div class="row">
          <div class="col">請求金額合計</div>
          <div class="col"><%= @order.total_payment+@order.shipping_fee %></div>
        </div>
      </div>
    </div>
  </div>
</div>