    <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    </head>

  <body>
    <div class="footer-fixed">
    <header class="header">
  <!-- Fixed navbar -->
    <nav class="navbar navbar-expand navbar-light mt-light" style="background-color: #e3f2fd;">
        <a class="navbar-brand" href="#"><strong>Nagano Cake</strong></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
          </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
          <ul class="navbar-nav ml-auto justify-content-end">

            <% if customer_signed_in? %>
            <li class="btn btn-outline-info mx-3"><a class="nav-link" href="/customers/mypage/">マイページ</a></li>
            <li class="btn btn-outline-info mx-3"><a class="nav-link" href="/items/">商品一覧</a></li>
            <li class="btn btn-outline-info mx-3"><a class="nav-link" href="/cart_items/">カート</a></li>
            <li class="btn btn-outline-info mx-3"><a class="nav-link" href="/customers/sign_out" data-method="delete">ログアウト</a></li>
            <% elsif admin_signed_in? %>
            <li class="btn btn-outline-info mx-3"><a class="nav-link" href="/admin/items/">商品一覧</a></li>
            <li class="btn btn-outline-info mx-3"><a class="nav-link" href="/admin/customers/">会員一覧</a></li>
            <li class="btn btn-outline-info mx-3"><a class="nav-link" href="/admin/">注文履歴一覧</a></li>
            <li class="btn btn-outline-info mx-3"><a class="nav-link" href="/admin/genres/">ジャンル一覧</a></li>
            <li class="btn btn-outline-info mx-3"><a class="nav-link" href="/admins/sign_out" data-method="delete">ログアウト</a></li>
            <form class="form-inline mt-2 mt-md-0">
            <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
            <%else%>
            <li class="nav-item">
              <a class="nav-link btn btn-info mx-3" href="/public/homes/about">About<span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link btn btn-info mx-3" href="/items">商品一覧</a>
            </li>
            <li class="nav-item">
              <a class="nav-link btn btn-info mx-3" href="/customers/sign_up">新規登録</a>
            </li>
            <li class="nav-item">
              <a class="nav-link btn btn-info mx-3" href="/customers/sign_in">ログイン</a>
            </li>
            <% end %>
          </ul>
       </div>
    </nav>
   </header>
   <main>
      <%=yield %>
    </main>

    <footer >
        <div class="footer">
         </div>
    </footer>
  </div>
