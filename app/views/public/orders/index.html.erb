<div class="container">
  <div class="contents-header">
    <div class="header-text"><h5>注文履歴一覧</h5></div>
  </div>
  <div class="orders">
    <table class="table table-bordered m-10">
  <thead>
    <tr>
      <th scope="col table-secondary">注文日</th>
      <th scope="col table-secondary">配送先</th>
      <th scope="col table-secondary">注文商品</th>
      <th scope="col table-secondary">支払金額</th>
      <th scope="col table-secondary">注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td scope="row">
        <div class="order-detail"><%= order.created_at %></div>
      </td>
      <td><%= order.postal_code %><%= order.address %></br><%= order.name %></td>
      <td><% order.order_details.each do |order_detail| %>
            <%= order_detail.item.name %></br>
          <% end %>
      </td>

      <td><%= order.total_payment + order.shipping_fee %>円</td>
      <td><div><%= link_to "表示する", order_path(order), class:"btn btn-primary" %></div></td>
    </tr>
    <% end %>
    </tbody>
   </table>
  </div>
</div>