<div class="page-title">
  <h5>新規会員登録</h5>
</div>
<div class="customer-sign-up">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/customers/shared/error_messages", resource: resource %>

  <div class="form-control">
    <%= f.label :last_name %><%= f.label :first_name %><br />
    <%= f.text_field :last_name, autofocus: true %><%= f.text_field :first_name, autofocus: true %>
  </div>
  <div class="form-control">
    <%= f.label :last_name_kana %><%= f.label :first_name_kana %><br />
    <%= f.text_field :last_name_kana, autofocus: true %><%= f.text_field :first_name_kana, autofocus: true %>
  </div>


  <div class="form-control">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <div class="form-control">
    <%= f.label :postal_code %><br />
    <%= f.text_field :postal_code, autofocus: true %>
  </div>
  <div class="form-control">
    <%= f.label :address %><br />
    <%= f.text_field :address, autofocus: true %>
  </div>
  <div class="form-control">
    <%= f.label :telephone_number %><br />
    <%= f.text_field :telephone_number, autofocus: true %>
  </div>

  <div class="form-control">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="form-control">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "public/customers/shared/links" %>
</div>