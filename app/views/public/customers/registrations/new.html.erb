<div class="container">
<div class="page-title">
  <h5>新規会員登録</h5>
</div>
<div class="customer-sign-up">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/customers/shared/error_messages", resource: resource %>

  <div>
    <%= f.label :last_name %><%= f.label :first_name %><br />
    <%= f.text_field :last_name, autofocus: true, class:"form-control" %><%= f.text_field :first_name, autofocus: true, class:"form-control" %>
  </div>
  <div>
    <%= f.label :last_name_kana %><%= f.label :first_name_kana %><br />
    <%= f.text_field :last_name_kana, autofocus: true, class:"form-control" %><%= f.text_field :first_name_kana, autofocus: true, class:"form-control" %>
  </div>


  <div>
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
  </div>
  <div>
    <%= f.label :postal_code %><br />
    <%= f.text_field :postal_code, autofocus: true, class:"form-control" %>
  </div>
  <div>
    <%= f.label :address %><br />
    <%= f.text_field :address, autofocus: true, class:"form-control" %>
  </div>
  <div>
    <%= f.label :telephone_number %><br />
    <%= f.text_field :telephone_number, autofocus: true, class:"form-control" %>
  </div>

  <div>
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
  </div>

  <div>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class:"btn btn-success" %>
  </div>
<% end %>
  <div class="index">
    <h5>既に登録済みの方</h5>
    <div class="index-detail">
      <div><a href="/customers/sign_in" data-method="get">こちら</a>からログインしてください</div>
    </div>
  </div>
<%= render "public/customers/shared/links" %>
</div>
</div>