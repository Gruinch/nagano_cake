<div class="container">
<div class="contents-header">
  <h5 class="header-text">新規会員登録</h5>
</div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/customers/shared/error_messages", resource: resource %>
  <div class="form-group">
    <div class="form-label"><%= f.label "名前" %></div>
     <div class="form-input"><div class="label-name">(姓)</div><%= f.text_field :last_name, autofocus: true, placeholder: "長野", class:"form-control" %></div>
     <div class="form-input"><div class="label-name">(名)</div><%= f.text_field :first_name, autofocus: true, placeholder: "景子", class:"form-control" %></div>
  </div>
  <div class="form-group">
    <div class="form-label"><%= f.label "フリガナ" %></div>
    <div class="label-name">(セイ)</div>
    <div class="form-input"><%= f.text_field :last_name_kana, autofocus: true, class:"form-control", placeholder: "ナガノ" %></div>
    <div class="label-name">(メイ)</div>
    <div class="form-input"><%= f.text_field :first_name_kana, autofocus: true, class:"form-control", placeholder: "ケイコ"%></div>
  </div>
  <div class="form-group">
    <div class="form-label"><%= f.label "メールアドレス" %></div>
    <div class="form-input"><%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder: "cake@email.com" %></div>
  </div>
  <div class="form-group">
    <div class="form-label"><%= f.label "郵便番号（ハイフン無し）" %></div>
    <div class="form-input"><%= f.text_field :postal_code, autofocus: true, class:"form-control", placeholder: "0000000" %></div>
  </div>
  <div class="form-group">
    <div class="form-label"><%= f.label "住所" %></div>
    <div class="form-input"><%= f.text_field :address, autofocus: true, class:"form-control", placeholder: "東京都新宿区新宿０丁目０−００" %></div>
  </div>
  <div class="form-group">
    <div class="form-label"><%= f.label "電話番号（ハイフン無し）" %></div>
    <div class="form-input"><%= f.text_field :telephone_number, autofocus: true, class:"form-control", placeholder: "00000000000" %></div>
  </div>

  <div class="form-group">
    <div class="form-label"><%= f.label "パスワード（６文字以上）" %>
    <div class="form-input"><%= f.password_field :password, autocomplete: "new-password", class:"form-control"%></div>
  </div>

  <div class="form-group">
    <div class="form-label"><%= f.label "パスワード（確認用）" %></div>
    <div class="form-input"><%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %></div>
  </div>

  <div class="actions log-in-button">
    <%= f.submit "新規登録", class:"btn btn-success" %>
  </div>
<% end %>
  <div class="index">
    <h6 class="contents-header header-text">既に登録済みの方</h6>
    <div class="index-detail">
      <div><a href="/customers/sign_in" data-method="get">こちら</a>からログインしてください</div>
    </div>
  </div>
<%= render "public/customers/shared/links" %>
</div>