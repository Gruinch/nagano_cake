<div class="container">
  <div class="contents-header"><h5 class="header-text">会員情報編集</h5></div>
  <div class="customer-edit">
  <%= form_with model: @customer, url: customers_path , local:true do |f| %>
    <div class="edit-customer-contents">
      <label class="edit-customer-detail col-4">氏名</label>
      <div class="edit-customer-detail"><%=f.text_field :last_name, class:"form-control"%></div>
      <div class="edit-customer-detail"><%=f.text_field :first_name, class:"form-control"%></div>
    </div>
    <div class="edit-customer-contents">
      <label class="edit-customer-detail col-4">フリガナ</label>
      <div class="edit-customer-detail"><%=f.text_field :last_name_kana, class:"form-control"%></div>
      <div class="edit-customer-detail"><%=f.text_field :first_name_kana, class:"form-control"%></div>
    </div>
    <div class="edit-customer-contents">
      <label class="edit-customer-detail col-4">郵便番号</label>
      <div class="edit-customer-detail"><%=f.text_field :postal_code, class:"form-control"%></div>
    </div>
    <div class="edit-customer-contents">
      <label class="edit-customer-detail col-4">住所</label>
      <div class="edit-customer-detail col-8"><%=f.text_field :address, class:"form-control"%></div>
    </div>
    <div class="edit-customer-contents">
      <label class="edit-customer-detail col-4">電話番号</label>
      <div class="edit-customer-detail"><%=f.text_field :telephone_number, class:"form-control"%></div>
    </div>
    <div class="edit-customer-contents">
      <label class="edit-customer-detail col-4">メールアドレス</label>
      <div class="edit-customer-detail"><%=f.text_field :email, class:"form-control"%></div>
    </div>
    <div class="edit-customer-contents">
      <div class="edit-button"><%= f.submit "変更内容を保存", class:"btn btn-success" %></div>
  <% end %>
      <div class="unsubscribe-button"><%=link_to "退会する", confirm_unsubscribe_customers_path, class:"btn btn-danger" %></div>
    </div>
  </div>
</div>