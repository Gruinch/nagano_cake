<div class="container">
  <div class="header">
    <div><h5>ショッピングカート</h5></div>
    <div><%= link_to  destroy_all_cart_items_path, method: :delete do %><div class="btn btn-danger">カートを空にする</div><% end %></div>
  </div>
  <div class="cart-items">
    <table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">商品名</th>
      <th scope="col">単価</th>
      <th scope="col">数量</th>
      <th scope="col">小計</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td scope="row"><%= cart_item.item.name %></td>
      <td><%= cart_item.item.price %></td>
      <td><%= cart_item.amount %></td>
      <td><%= cart_item.item.price * cart_item.amount %></td>
      <td><%= link_to cart_item_path(cart_item.id), method: :delete do %><div class="btn btn-danger">削除する</div><% end %></td>
    </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>