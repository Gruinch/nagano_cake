<div class="container">
  <div class="header">
    <div><h5>ショッピングカート</h5></div>
    <div><%= link_to  destroy_all_cart_items_path, method: :delete do %><div class="btn btn-danger">カートを空にする</div><% end %></div>
  </div>
  <div class="cart-items">
    <table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">商品名</th>
      <th scope="col">単価</th>
      <th scope="col">数量</th>
      <th scope="col">小計</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td scope="row">
        <div class="col">
          <%= attachment_image_tag cart_item.item,:image, :fill,75, 75, fallback: "noimage.png"%></div>
          <div class="col"><%= cart_item.item.name %></div>
      </td>
      <td><%= cart_item.item.price %></td>
      <td>
      <%= form_with model:cart_item, url:cart_item_path(cart_item), method: :patch do |f| %>
        <%= f.select :amount, options_for_select([1,2,3,4,5], {selected: cart_item.amount.to_i}) %>
        <%= f.submit "変更", class:"btn btn-success"%>
      <% end %></td>
      <td><%= cart_item.item.price * cart_item.amount %></td>
      <td><%= link_to cart_item_path(cart_item.id), method: :delete do %><div class="btn btn-danger">削除する</div><% end %></td>
    </tr>
    <% end %>
    </tbody>
   </table>
   <div>
     <div class="btn"><%= link_to "買い物を続ける", root_path %></div>
     <div class="total-price"></div>
   </div>
   <div class="btn"><%= link_to "情報入力に進む", new_order_path %></div>
  </div>
</div>