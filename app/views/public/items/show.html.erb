<div class="container">
  <div class="row m-3">
  </div>
  <div class="row">
    <div class="col-4 item-image">
      <%= attachment_image_tag @item,:image, :fill,300, 235, fallback: "noimage.png"%>
    </div>
    <div class="col-8 ">
    <table class="table table-borderless item-details">
        <tbody>
          <tr>
            <td></td>
            <td><h3><%= @item.name %></h3></td>
          </tr>
          <tr>
            <td></td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <td></td>
            <td>¥<%= @item.price %></td>
          </tr>
        </tbody>
      </table>
      <div class="add-item">
      <%= form_with model: @cart_item, url:'/cart_items', local:true do |f| %>
        <%= f.select :amount, [ 1,2,3,4,5 ] %>

        <%= f.hidden_field :item_id, :value => @item.id %>
        <%= f.submit "カートに入れる", class:"btn btn-success"%>
      <% end %>
      </div>
      </div>
  </div>
</div>
</div>