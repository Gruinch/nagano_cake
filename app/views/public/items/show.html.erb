<div class="container">
  <div class="row m-3">
  </div>
  <div class="row">
    <div class="col-4 item-image">
      <%= attachment_image_tag @item,:image, :fill,300, 235, fallback: "noimage.png"%>
    </div>
    <div class="col-8 ">
    <table class="table table-borderless item-details">
        <tbody>
          <tr>
            <td></td>
            <td><h3><%= @item.name %></h3></td>
          </tr>
          <tr>
            <td></td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <td></td>
            <td>¥<%= @item.price %></td>
          </tr>
        </tbody>
      </table>
      <div class="item-button">
      <a class="btn btn-success" href="/cart_items">カートに入れる</a>
      </div>
      </div>
  </div>
</div>  
</div>