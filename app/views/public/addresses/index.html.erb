<div class="container">
  <div class="contents-header">
    <div class="header-text"><h5>配送先登録/一覧</h5></div>
  </div>
  <div class="new-addresses">
    <%= form_with model: @address, url:addresses_path, method: :post, local:true do |f| %>
    <div class="address-form">
      <div class="form-label"><label>郵便番号（ハイフン無し）</label></div>
      <div><%= f.text_field :postal_code, class:"form-control" %></div>
    </div>
    <div class="address-form">
      <div class="form-label"><label>住所</label></div>
      <div><%= f.text_field :address, class:"form-control" %></div>
    </div>
    <div class="address-form">
      <div class="form-label"><label>宛名</label></div>
      <div><%= f.text_field :name, class:"form-control" %></div>
    </div>
    <div class="submit-button">
    <%= f.submit "新規登録", class:"btn btn-success"%>
    </div>
    <% end %>
  </div>
</div>
