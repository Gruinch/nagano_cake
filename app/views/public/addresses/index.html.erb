<div class="container">
  <div class="contents-header">
    <div class="header-text"><h5>配送先登録/一覧</h5></div>
  </div>
  <div class="new-addresses">
    <%= form_with model: @address, url:addresses_path, method: :post, local:true do |f| %>
    <div class="address-form">
      <div class="form-label"><label>郵便番号（ハイフン無し）</label></div>
      <div><%= f.text_field :postal_code, class:"form-control" %></div>
    </div>
    <div class="address-form">
      <div class="form-label"><label>住所</label></div>
      <div class="address-form-input"><%= f.text_field :address, class:"form-control" %></div>
    </div>
    <div class="address-form">
      <div class="form-label"><label>宛名</label></div>
      <div><%= f.text_field :name, class:"form-control" %></div>
    </div>
    <div class="address-submit-button">
      <div class="address-submit-button-0">
      <%= f.submit "新規登録", class:"btn btn-success"%>
      </div>
    </div>
    <% end %>
  </div>
  <div class="address-table">
    <table class="table table-bordered col-8">
    　<thead>
        <tr>
          <th scope="col" class="table-active">郵便番号</th>
          <th scope="col" class="table-active">住所</th>
          <th scope="col" class="table-active">宛名</th>
          <th scope="col" class="table-active"></th>
        </tr>
      </thead>
    　<tbody>
      <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td>
            <div class="address-button">
            <div class="address-button-0"><%= link_to "編集する", edit_address_path(address), class:"btn btn-success" %></div>
            <div class="address-button-0"><%= link_to "削除する", address_path(address), method: :delete, class:"btn btn-danger" %></div>
            </div>
          </td>
        </tr>
      　<% end %>
    　</tbody>
  　</table>
  </div>
</div>
